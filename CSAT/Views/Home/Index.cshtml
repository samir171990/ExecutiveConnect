@{
    ViewBag.Title = "Home Page";
}

<h2>Users List</h2>
<br />
<table class="table table-striped table-bordered table-hover" id="TableId" cellspacing="0" align="center" width="100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th>Executive Title</th>
        </tr>
    </thead>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#TableId').dataTable({
                "bServerSide": true,
                "bProcessing": true,
                "bPaginate": false,
                "sAjaxSource": "/Home/AjaxHandler",
                "aoColumns": [
                        {
                            "sName": "Name",
                            "bSearchable": false,
                            "bSortable": false,
                            "fnRender": function (oObj) {
                                return '<a href=\"Details/' +
                                oObj.aData[0] + '\">View</a>';
                            }
                        },
                        { "sName": "DateOfBirth" },
                        { "sName": "Email" },
                        { "sName": "ExecutiveTitle" }
                ]

            });
        });
    </script>
    }